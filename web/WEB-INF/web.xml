<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>ch2.WithServlet.Controller</servlet-name>
        <servlet-class>ch2.WithServlet.Controller</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ReorganisedController</servlet-name>
        <servlet-class>ch3.reorganised.Controller</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ch2.WithServlet.Controller</servlet-name>
        <url-pattern>/ch2/WithServlet/Controller</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ch3.dataBean.Controller</servlet-name>
        <servlet-class>ch3.dataBean.Controller</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ch3.dataBean.Controller</servlet-name>
        <url-pattern>/ch3/dataBean/Controller</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Controller</servlet-name>
        <servlet-class>ch3.defaultValidate.Controller</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Controller</servlet-name>
        <url-pattern>/ch3/defaultValidate/Controller</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ReorganisedController</servlet-name>
        <url-pattern>/ch3/reorganised/Controller</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
